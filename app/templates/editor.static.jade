section#container-edit.container-fluid.full-height

    .row.full-height

        // controls
        #container-controls-parent.col-sm-4.col-md-3(data-simplebar-direction='vertical')

            #container-controls

                .controls-entry
                    .row
                        h3 Icon color
                    .row
                        #color-icon.input-group.color-input-group
                            input.form-control(type='text')
                            span.input-group-addon
                                i

                .controls-entry
                    .row
                        h3 Background color
                    .row
                        #color-base.input-group.color-input-group
                            input.form-control(type='text')
                            span.input-group-addon
                                i

                .controls-entry
                    .row
                        h3 Center icon
                    .row
                        input#checkbox-center-icon(checked, type='checkbox', data-toggle='toggle', data-width='100')

                .controls-entry
                    .row
                        h3 Shadow length
                    .row
                        input#slider-shadow-length(type='text', data-slider-id='slider-shadow-length-id', data-slider-min='0', data-slider-max='100', data-slider-step='1', data-slider-value='60')

                .controls-entry
                    .row
                        h3 Shadow intensity
                    .row
                        input#slider-shadow-intensity(type='text', data-slider-id='slider-shadow-intensity-id', data-slider-min='0', data-slider-max='1', data-slider-step='0.01', data-slider-value='0.7')

                .controls-entry
                    .row
                        h3 Shadow fading
                    .row
                        input#slider-shadow-fading(type='text', data-slider-id='slider-shadow-fading-id', data-slider-min='0', data-slider-max='1', data-slider-step='0.01', data-slider-value='0')

                .controls-entry
                    .row
                        h3 Icon size
                    .row
                        input#slider-icon-size(type='text', data-slider-id='slider-icon-size-id', data-slider-min='0.1', data-slider-max='7', data-slider-value='5', data-slider-step='0.1', data-slider-tooltip='bottom')

                .controls-entry
                    button#btn-download-svg.btn.btn-lg.full-width(type='submit') Download


        // canvas
        #container-canvas-draw-parent.col-sm-8.col-md-9.full-height
            #container-canvas-draw.full-height.full-width
                #container-canvas-draw-wrapper
                    canvas#canvas-draw

            #canvas-loading
                span.glyphicon.glyphicon-refresh.glyphicon-refresh-animate

            #about
                a(href='https://github.com/Maddoc42/MaterialIconsGenerator')
                    strong Material Icon Generator
                    |  by Philipp
            //
                <div id="picker-content-loading" class="filePickerOverlayContent">
                    <h2><span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span> Generating icon ...</h2>
                </div>

    // hidden canvas for exporting
    canvas#canvas-export-mdpi
    canvas#canvas-export-hdpi
    canvas#canvas-export-xhdpi
    canvas#canvas-export-xxhdpi
    canvas#canvas-export-xxxhdpi

